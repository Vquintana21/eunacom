  "total_preguntas": 20,
  "preguntas": [
    {
      "numero": "1",
      "texto": "¿Qué mide la prueba de la tuberculina (PPD)?",
      "alternativas": [
        {
          "opcion": "A",
          "texto": "La cantidad de bacilos circulantes"
        },
        {
          "opcion": "B",
          "texto": "La inmunidad humoral frente a Mycobacterium tuberculosis"
        },
        {
          "opcion": "C",
          "texto": "La hipersensibilidad retardada mediada por células T"
        },
        {
          "opcion": "D",
          "texto": "La producción de anticuerpos IgM específicos"
        },
        {
          "opcion": "E",
          "texto": "La respuesta a la vacuna BCG"
        }
      ],
      "respuesta_correcta": "C",
      "explicacion": "La PPD evalúa una reacción de hipersensibilidad tipo IV mediada por linfocitos T sensibilizados."
    },
    {
      "numero": "2",
      "texto": "¿Cuál es el antígeno utilizado en la prueba de PPD?",
      "alternativas": [
        {
          "opcion": "A",
          "texto": "Proteína recombinante ESAT-6"
        },
        {
          "opcion": "B",
          "texto": "Derivado proteico purificado de Mycobacterium tuberculosis"
        },
        {
          "opcion": "C",
          "texto": "Antígeno de superficie micobacteriano"
        },
        {
          "opcion": "D",
          "texto": "Lipopolisacárido micobacteriano"
        },
        {
          "opcion": "E",
          "texto": "Interferón gamma recombinante"
        }
      ],
      "respuesta_correcta": "B",
      "explicacion": "La PPD usa un derivado proteico purificado del Mycobacterium tuberculosis para inducir la respuesta cutánea."
    },
    {
      "numero": "3",
      "texto": "¿Cuál es el sitio anatómico recomendado para aplicar la PPD?",
      "alternativas": [
        {
          "opcion": "A",
          "texto": "Cara anterior del antebrazo izquierdo"
        },
        {
          "opcion": "B",
          "texto": "Cara posterior del antebrazo derecho"
        },
        {
          "opcion": "C",
          "texto": "Región deltoidea"
        },
        {
          "opcion": "D",
          "texto": "Cara lateral del muslo"
        },
        {
          "opcion": "E",
          "texto": "Región escapular"
        }
      ],
      "respuesta_correcta": "A",
      "explicacion": "La PPD se aplica intradérmicamente en la cara anterior del antebrazo, preferentemente izquierdo."
    },
    {
      "numero": "4",
      "texto": "¿Cuánto volumen de PPD se debe inyectar?",
      "alternativas": [
        {
          "opcion": "A",
          "texto": "0.05 mL"
        },
        {
          "opcion": "B",
          "texto": "0.1 mL"
        },
        {
          "opcion": "C",
          "texto": "0.2 mL"
        },
        {
          "opcion": "D",
          "texto": "0.5 mL"
        },
        {
          "opcion": "E",
          "texto": "1.0 mL"
        }
      ],
      "respuesta_correcta": "B",
      "explicacion": "Se inyectan 0.1 mL de PPD intradérmico, equivalentes a 5 unidades tuberculínicas."
    },
    {
      "numero": "5",
      "texto": "¿A las cuántas horas se debe leer la prueba de la tuberculina?",
      "alternativas": [
        {
          "opcion": "A",
          "texto": "12-24 horas"
        },
        {
          "opcion": "B",
          "texto": "24-48 horas"
        },
        {
          "opcion": "C",
          "texto": "48-72 horas"
        },
        {
          "opcion": "D",
          "texto": "72-96 horas"
        },
        {
          "opcion": "E",
          "texto": "96-120 horas"
        }
      ],
      "respuesta_correcta": "C",
      "explicacion": "La lectura se realiza entre las 48 y 72 horas tras la aplicación para evaluar la induración."
    },
    {
      "numero": "6",
      "texto": "¿Qué se mide al interpretar la PPD?",
      "alternativas": [
        {
          "opcion": "A",
          "texto": "El eritema"
        },
        {
          "opcion": "B",
          "texto": "El diámetro de la induración palpable"
        },
        {
          "opcion": "C",
          "texto": "El enrojecimiento visible"
        },
        {
          "opcion": "D",
          "texto": "El área con descamación"
        },
        {
          "opcion": "E",
          "texto": "La zona de hiperpigmentación"
        }
      ],
      "respuesta_correcta": "B",
      "explicacion": "Solo la induración palpable, no el eritema, se considera al medir la reacción."
    },
    {
