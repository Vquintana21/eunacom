        {
          "opcion": "A",
          "texto": "Fiebre mayor de 38°C por más de 3 días"
        },
        {
          "opcion": "B",
          "texto": "Fiebre mayor de 38°C por más de 2 semanas sin diagnóstico"
        },
        {
          "opcion": "C",
          "texto": "Fiebre menor de 38°C por más de 1 semana"
        },
        {
          "opcion": "D",
          "texto": "Fiebre recurrente con intervalos afebriles"
        },
        {
          "opcion": "E",
          "texto": "Fiebre de origen hospitalario"
        }
