        {
          "opcion": "B",
          "texto": "Traumatismo craneoencefálico"
        },
        {
          "opcion": "C",
          "texto": "Fiebre alta"
        },
        {
          "opcion": "D",
          "texto": "Hipoglucemia"
        },
        {
          "opcion": "E",
          "texto": "Meningitis"
        }
