        {
          "opcion": "C",
          "texto": "Dolor abdominal bajo"
        },
        {
          "opcion": "D",
          "texto": "Distensión abdominal generalizada"
        },
        {
          "opcion": "E",
          "texto": "Ruidos hidroaéreos hipoactivos"
        }
